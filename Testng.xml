<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Test Suite" parallel="tests" thread-count="1">
    <listeners>
        <listener class-name="listeners.TestListener"/>
    </listeners>

    <test name="Chrome Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testcases.Scenario1_HomePageTest"/>
            <class name="testcases.Scenario2_SignUpTest"/>
            <class name="testcases.Scenario3_LoginTest"/>
            <class name="testcases.Scenario4_Invalid_TestCases"/>
            <class name="testcases.Scenario5_HomePageLinksTest"/>
        </classes>
    </test>

    <test name="Edge Test">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="testcases.Scenario1_HomePageTest"/>
            <class name="testcases.Scenario2_SignUpTest"/>
            <class name="testcases.Scenario3_LoginTest"/>
            <class name="testcases.Scenario4_Invalid_TestCases"/>
            <class name="testcases.Scenario5_HomePageLinksTest"/>
        </classes>
    </test>

    <test name="Firefox Test">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="testcases.Scenario1_HomePageTest"/>
            <class name="testcases.Scenario2_SignUpTest"/>
            <class name="testcases.Scenario3_LoginTest"/>
            <class name="testcases.Scenario4_Invalid_TestCases"/>
            <class name="testcases.Scenario5_HomePageLinksTest"/>
        </classes>
    </test>

</suite>
